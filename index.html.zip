  <title>Mani Consultancy</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    /* Navbar */
    .navbar {
      background-color: #2c3eeb; /* Softer Blue */
      padding: 10px 20px;
      color: white;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .nav-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: auto;
      flex-wrap: wrap;
    }

    .nav-logo {
      font-size: 20px;
      font-weight: bold;
      color: white;
    }

    .nav-links a {
      margin-left: 15px;
      color: white;
      text-decoration: none;
      font-size: 16px;
      transition: color 0.3s ease;
    }

    .nav-links a:hover {
      color: #ffcc00;
    }

    /* Heading */
    .heading {
      text-align: center;
      font-size: 32px;
      font-weight: bolder;
      margin-top: 20px;
      color: #2c3eeb;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .locations {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 30px;
      padding: 20px;
    }

    .location-card {
      text-align: center;
      width: 100%;
      max-width: 400px;
    }

    .location-card img {
      width: 100%;
      height: auto;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .location-card h1 {
      color: #e67e22; /* Updated from 'chocolate' to vivid orange */
      font-size: 20px;
      margin-top: 10px;
    }

    .hi {
      padding: 20px;
      font-size: 16px;
      line-height: 1.6;
    }

    .hi ul {
      margin-top: 10px;
    }

    label {
      font-weight: bold;
    }

    input {
      padding: 10px;
      width: 80%;
      max-width: 400px;
      margin-bottom: 10px;
    }

    button {
      padding: 12px 24px;
      background-color: #2c3eeb;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #1a2dd4;
    }

    /* Footer */
    .footer {
      text-align: center;
      margin-top: 50px;
      padding: 20px;
      background-color: #0d1b2a; /* Dark Blue */
      color: #ffffff;
    }

    .footer a {
      display: block;
      margin: 5px 0;
      color: #f0f0f0;
      text-decoration: none;
      font-size: 14px;
    }

    .footer a:hover {
      text-decoration: underline;
    }

    .footer button {
      background-color: #25D366;
      margin-top: 10px;
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
      .heading {
        font-size: 28px;
      }

      .location-card h1 {
        font-size: 18px;
      }

      .footer a {
        font-size: 13px;
      }

      .nav-links {
        width: 100%;
        display: flex;
        justify-content: space-around;
        margin-top: 10px;
      }
    }
   .location-card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.location-card:hover {
  cursor: pointer;
  transform: scale3d(33.4);
  box-shadow: 33px 36px 34px 22px rgba(153, 11, 11, 0.4);
}


    @media screen and (min-width: 1200px) {
      .locations {
        flex-direction: row;
        justify-content: center;
        flex-wrap: wrap;
      }

      .heading {
        font-size: 48px;
      }

      .location-card {
        max-width: 350px;
        margin: 15px;
      }

      .location-card:hover {
        cursor: pointer;
        height: 100%;
        width: 60%;
      }

      .location-card h1 {
        font-size: 24px;
      }

      .footer a {
        display: inline-block;
        margin: 0 15px;
        font-size: 16px;
      }
    }
  </style>
</head>
